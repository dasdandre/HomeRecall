@using HomeRecall
@inject BackupContext Context
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudForm @bind-IsValid="@success">
            <MudTextField @bind-Value="model.Name" Label="Name" Required="true" RequiredError="Name is required!" />
            <MudTextField @bind-Value="model.IpAddress" Label="IP Address" Required="true" RequiredError="IP is required!" />
            <MudSelect @bind-Value="model.Type" Label="Type">
                @foreach (DeviceType type in Enum.GetValues(typeof(DeviceType)))
                {
                    <MudSelectItem Value="@type">@type</MudSelectItem>
                }
            </MudSelect>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="@(!success)">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    private Device model = new Device();
    private bool success;

    void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        Context.Devices.Add(model);
        await Context.SaveChangesAsync();
        Snackbar.Add("Device added", Severity.Success);
        MudDialog.Close(DialogResult.Ok(true));
    }
}