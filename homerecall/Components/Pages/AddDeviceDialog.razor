@using HomeRecall
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> L
@inject BackupContext Context
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudForm @bind-IsValid="@success">
            <MudTextField @bind-Value="model.Name" Label="@L["Devices_Table_Name"]" Required="true" RequiredError="Name is required!" />
            <MudTextField @bind-Value="model.IpAddress" Label="@L["Devices_Table_IpAddress"]" Required="true" RequiredError="IP is required!" />
            <MudSelect @bind-Value="model.Type" Label="@L["Devices_Table_Type"]">
                @foreach (DeviceType type in Enum.GetValues(typeof(DeviceType)))
                {
                    <MudSelectItem Value="@type">@type</MudSelectItem>
                }
            </MudSelect>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@L["Common_Cancel"]</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="@(!success)">@L["Common_Save"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    private Device model = new Device();
    private bool success;

    void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        Context.Devices.Add(model);
        await Context.SaveChangesAsync();
        Snackbar.Add(L["AddDevice_Success"], Severity.Success);
        MudDialog.Close(DialogResult.Ok(true));
    }
}